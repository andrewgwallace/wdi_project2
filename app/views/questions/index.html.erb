<!-- Form and tabs for question creation -->
</br>
<center>
<% if current_user %>
  <a href="#" data-reveal-id="askModal" class="ask">Ask</a>
  <a href="#" data-reveal-id="answerModal" class="answer">Answer</a>
  <div id="askModal" class="reveal-modal medium" data-reveal>
    <h1>Ask away...</h1>
    <center>
    <a href="" data-reveal-id="yesnoModal"><p class="secondary button">Yes or No</p></a>
    <a href="" data-reveal-id="thisthatModal"><p class="secondary button">This or That</p></a>
    <a href="" data-reveal-id="rankModal"><p class="secondary button">Rank</p></a>
    <a class="close-reveal-modal">&#215;</a>
  </center>
  </div>
      <div id="yesnoModal" class="reveal-modal tiny" data-reveal>
        <h3>Yes or No</h3>
        <small>Should I take my shoes off when entering someone else's house? Yes/No</small>
        </br>
      </br>
        <form id='question_form' class"questionaire">
          <input type="text" class='yes_no_form' name='yes_no_content'placeholder="Question"></br>
          <input type="hidden" class='yes_no_form' name='yes' value='yes'>
          <input type="hidden" class='yes_no_form' name='no' value='no'>
          <input type="hidden" name="user_id" value=<%= @current_user.id %>></br>
          <input type="submit" value="Ask!">
        </form>
        <a class="close-reveal-modal">&#215;</a>
      </div>
      <div id="thisthatModal" class="reveal-modal tiny" data-reveal>
        <h3>This or That</h3>
        <small>Should I dress up or down on a first date? Dress-Up/Dress-Down</small>
        </br>
        </br>
        <form id='question_form_this' class"questionaire">
          <input type="text" class='this_that_form' name='this_that_content'placeholder="Question"></br></br>
          <input type="text"  class='this_that_form' name='option_1'placeholder="Option A"></br></br>
          <input type="text"  class='this_that_form' name='option_2'placeholder="Option B"></br>
          <input type="hidden" name="user_id" value=<%= @current_user.id %>></br>
          <input type="submit" value="Ask!">
        </form>
        <a class="close-reveal-modal">&#215;</a>
      </div>
      <div id="rankModal" class="reveal-modal tiny" data-reveal>
        <h3>Rank</h3>
        <small>How many days should I wait to call after the first date? 0-10</small>
        </br>
        </br>
        <form id='question_form_rank' class"questionaire">
          <input type="text" class='ranking_form' name='ranking_form_content' placeholder="Question"></br></br>
          <input type="text" class='ranking_form' name='range_min' placeholder="Minimum value"></br></br>
          <input type="text" class='ranking_form' name='range_max' placeholder="Maximum value"></br>
          <input type="hidden" name="user_id" value=<%= @current_user.id %>></br>
          <input type="submit" value="Ask!">
        </form>
        <a class="close-reveal-modal">&#215;</a>
      </div>

<% else %>
    <!-- Sign on and in links for users not logged in -->
  <div class="entry">
    <h3>Looks like you're not logged in.</h3>
    <h4>Feel free to browse around for questions</h4>
    <p>Sign up or log in to answer questions and ask the community.</p>
    <a href=<%= new_user_registration_path %>><button>Sign Up</button></a>&nbsp&nbsp&nbsp&nbsp&nbsp
    <a href=<%= new_user_session_path %>><button>Log in&nbsp</button></a>
</div>
<% end %>
</br>
</center>

